#!/bin/sh
export LANG=en_US
cd /home/www/cvs.linuxbog.dk/htdocs/
cvs update -d 
rm -rf cvs2html
mkdir cvs2html
cvs2html -i ../linux.png  -l http://cvs.linuxbog.dk -f -p -o cvs2html/index.html -v -a -b -D 30 -C cvs_crono.html
make dist && ./configure --med-alle -u cvs.linuxbog.dk > .buildmsgs
make all >> .buildmsgs >& .builderrs
chgrp -R linuxbog .
chmod -R g+w .
TERM=vt100 /usr/bin/lynx http://cvs.linuxbog.dk/index.php\?matrix=1 -dump | grep "Ud af" > ~/.lbstatus
date | mail -s "Linuxbog:`cat ~/.lbstatus`" linuxbog-commit@tyge.sslug.dk
echo "done"
