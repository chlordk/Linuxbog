     <entry>RPM-pakker</entry>
    </row>
   </thead>

   <tbody>
    <row>
     <entry>Generel Ada-programmering.</entry>
     <entry>gnat, gnat-runtime</entry>
     <entry>gnat, gnat-runtime</entry>
    </row>

    <row>
     <entry>Distribuerede programmer.</entry>
     <entry>gnat-glade</entry>
     <entry>gnat-glade</entry>
