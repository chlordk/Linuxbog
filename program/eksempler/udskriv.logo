local "fil
local "lnr
local "lin
local "ch
print [Hvilken fil skal listes?]
make "fil readword
ifelse not file? thing "fil [
  openread thing "fil
  setread thing "fil
  make "lnr 0
  while [ not eof? ] [
    make "ch readchar
    make "lin "
    while [ not equal? "10 ascii thing "ch ] [
      make "lin word thing "lin thing "ch
      ifelse not eof? [
        make "ch readchar
      ] [
        make "ch char 10
      ]
    ]
    make "lnr 1 + thing "lnr
    print sentence thing "lnr thing "lin
  ]
  close thing "fil
] [
